<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER_LEFT" minWidth="200">
        <padding>
            <Insets bottom="5" left="15" right="5" top="5" />
        </padding>
        <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
        <padding>
            <Insets bottom="5" left="15" right="5" top="5" />
        </padding>
        <HBox spacing="1">
            <Label styleClass="cell_small_label" text="Tech Stack: " />
            <HBox fx:id="techStacks" spacing="4" />
        </HBox>
        <HBox spacing="1">
            <Label styleClass="cell_small_label" text="Tag: " />
            <HBox fx:id="tags" spacing="4" />
        </HBox>
    </VBox>
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
        <VBox alignment="CENTER_LEFT" GridPane.columnIndex="0">

        </VBox>
    </GridPane>
</HBox>
